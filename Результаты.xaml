<Window x:Class="Угадай_мелодию.Результаты"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Угадай_мелодию"
        mc:Ignorable="d"
        Icon="/Фото/иконка.ico"
        WindowStartupLocation="CenterScreen"
        Title="Финальный раунд" Height="800" Width="1100" Background="#FF8E0038" FontFamily="Gilroy" >
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFF8F3A2"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize"  Value="15"/>
            <Setter Property="Height"  Value="45"/>
            <Setter Property="Width"  Value="135"/>
            <Setter Property="VerticalContentAlignment"  Value="Center"/>
            <Setter Property="HorizontalContentAlignment"  Value="Center"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                    <Setter Property="BorderBrush"  Value="#FFFBFBFB"/>
                </Style>
            </Style.Resources>


        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Справка" Height="35" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="18" Margin="5" Click="Spravka_Click" Background="#FFD10058" Foreground="#FFF8F3A2"/>
        <Button Content="На главную" Height="35" Width="Auto" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="6" Margin="127,5,5,0" FontSize="18" Click="Home_Click" Background="#FFD10058" Foreground="#FFF8F3A2" />
        <Image Source="/Фото/нота(г).png" Grid.Column="6" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" Margin="93,39,-5,4"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="13.766"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/нота(ф).png" Grid.Column="6" Grid.ColumnSpan="2" Grid.Row="3" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" Margin="31,30,-57,2"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="9.878"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/нота_б(г).png" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" RenderTransformOrigin="0.178,-0.384" Margin="-54,31,127,7" Grid.ColumnSpan="3"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-11.442"/>
                    <TranslateTransform X="-22.157" Y="8.672"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/нота_п(ж).png" Grid.Column="0" Grid.Row="3" Grid.RowSpan="3" RenderTransformOrigin="0.746,-0.906" Margin="16,57,112,56" Grid.ColumnSpan="2"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-11.442"/>
                    <TranslateTransform X="-17.223" Y="-3.203"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/лин.png" Grid.Row="5" Grid.RowSpan="3" RenderTransformOrigin="0.5,0.5" Margin="59,43,15,7"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-11.442"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/лин.png" Grid.Row="4" Grid.RowSpan="2" RenderTransformOrigin="0.732,0.663" Margin="109,14,0,1.5" Grid.Column="6" HorizontalAlignment="Left" Width="63" Grid.ColumnSpan="2"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="35.317"/>
                    <TranslateTransform X="-12.112" Y="5.45"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/лин1.png" Grid.Row="5" Grid.RowSpan="3" RenderTransformOrigin="0.732,0.663" Margin="116,21,0,3" Grid.Column="6" HorizontalAlignment="Left" Width="88" Grid.ColumnSpan="2"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="19.934"/>
                    <TranslateTransform X="-12.112" Y="5.45"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/лин2.png" Grid.Row="5" Grid.RowSpan="3" RenderTransformOrigin="0.732,0.663" Margin="16,24.5,0,53.5" Grid.Column="1" HorizontalAlignment="Left" Width="63"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="78.941"/>
                    <TranslateTransform X="-12.112" Y="5.45"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Grid.Column="1" Grid.Row="1" Grid.RowSpan="7" Grid.ColumnSpan="6" Width="800" Source="/Фото/фон_рез2.png"/>
        <TextBlock x:Name="tblResults" TextAlignment="Center" Foreground="White"  FontSize="25"  HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="4" Grid.RowSpan="3" FontFamily="Gilroy Bold" />
        <TextBlock Text="Статистика игр:" Foreground="White"  FontSize="25" Grid.ColumnSpan="2" VerticalAlignment="Center" Grid.Column="1" Grid.Row="8" FontFamily="Gilroy Bold" Margin="20,0,0,0" />
        <ListBox x:Name="lbxStat" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="6" Grid.RowSpan="3" FontSize="18"/>
        <Button x:Name="CloseIt" Content="Завершить" Grid.Row="12" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="4" Width="250" Height="50" Background="White" FontSize="28" Click="CloseIt_Click">
            <Button.BitmapEffect>
                <DropShadowBitmapEffect Color="#FF4C4545 " Direction="320" Softness="1" ShadowDepth="5" Opacity="0.3" />
            </Button.BitmapEffect>
        </Button>


    </Grid>
</Window>