<Window x:Class="Угадай_мелодию.Игра_Угадай_мелодию"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Угадай_мелодию"
        mc:Ignorable="d"
        Icon="/Фото/иконка.ico"
        WindowStartupLocation="CenterScreen"
        Title="Угадай мелодию" Height="790" Width="1100" Background="#FF8E0038" FontFamily="Gilroy" >
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFF8F3A2"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize"  Value="15"/>
            <Setter Property="Height"  Value="45"/>
            <Setter Property="Width"  Value="135"/>
            <Setter Property="VerticalContentAlignment"  Value="Center"/>
            <Setter Property="HorizontalContentAlignment"  Value="Center"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                    <Setter Property="BorderBrush"  Value="#FFFBFBFB"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Source="/Фото/нота(г).png" Grid.Column="6" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="3" RenderTransformOrigin="0.5,0.5" Margin="62,33,-18,56"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="11.442"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/нота(ж).png" Grid.Column="5" Grid.ColumnSpan="3" Grid.Row="3" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" Margin="106,21,74,10"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="11.442"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/нота(ф).png" Grid.Column="6" Grid.ColumnSpan="2" Grid.Row="5" Grid.RowSpan="3" RenderTransformOrigin="0.5,0.5" Margin="54,40.5,-10,50.5"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="11.442"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/нота(ф).png" Grid.ColumnSpan="3" Grid.Row="7" Grid.RowSpan="3" RenderTransformOrigin="0.5,0.5" Margin="50,49,133,36"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="11.442"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/нота_б(г).png" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="4" Width="100" Height="130" RenderTransformOrigin="0.5,0.5" Margin="78,36,96,7.5"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-11.442"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/нота_п(ж).png" Grid.Column="0" Grid.Row="5" Grid.RowSpan="2" Width="100" Height="60" RenderTransformOrigin="0.5,0.5" Margin="26,12.5,11,25.5"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-11.442"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/нота_п(ж).png" Grid.Column="7" Grid.Row="10" Grid.RowSpan="3" Width="100" Height="60" RenderTransformOrigin="0.5,0.5" Margin="22,40.5,14,14.5"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="170"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/нота(ф).png" Grid.Row="11" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" Margin="14,12,49,35" Grid.ColumnSpan="2"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="230"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/нота(г).png" Grid.Row="9" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" Margin="-18,24.5,0,19"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="-17.44"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/нота_б(ж).png" Grid.Column="6" Grid.Row="8" Grid.RowSpan="4" Width="100" Height="130" RenderTransformOrigin="0.5,0.5" Margin="34,29.5,2,18.5"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-11.442"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/лин.png" Grid.Row="6" Grid.RowSpan="3" RenderTransformOrigin="0.5,0.5" Margin="47,54.5,27,25.5"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-11.442"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/лин.png" Grid.Row="8" Grid.RowSpan="3" RenderTransformOrigin="0.732,0.663" Margin="29,48.5,0,29.5" Grid.Column="7" HorizontalAlignment="Left" Width="63"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="35.317"/>
                    <TranslateTransform X="-12.112" Y="5.45"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/лин.png" Grid.Row="4" Grid.RowSpan="2" RenderTransformOrigin="0.732,0.663" Margin="109,14,0,1.5" Grid.Column="6" HorizontalAlignment="Left" Width="63" Grid.ColumnSpan="2"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="35.317"/>
                    <TranslateTransform X="-12.112" Y="5.45"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/лин1.png" Grid.Row="7" Grid.RowSpan="3" RenderTransformOrigin="0.732,0.663" Margin="83,24.5,0,55.5" Grid.Column="6" HorizontalAlignment="Left" Width="63" Grid.ColumnSpan="2"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="19.934"/>
                    <TranslateTransform X="-12.112" Y="5.45"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/лин1.png" Grid.Row="11" Grid.RowSpan="2" RenderTransformOrigin="0.732,0.663" Margin="103,6.5,0,7.5" Grid.Column="5" HorizontalAlignment="Left" Width="63" Grid.ColumnSpan="2"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="15.839"/>
                    <TranslateTransform X="-12.112" Y="5.45"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/лин2.png" Grid.Row="11" Grid.RowSpan="2" RenderTransformOrigin="0.732,0.663" Margin="84,8.5,0,6.5" Grid.Column="1" HorizontalAlignment="Left" Width="63" Grid.ColumnSpan="2"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="110.915"/>
                    <TranslateTransform X="-12.112" Y="5.45"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Фото/лин2.png" Grid.Row="5" Grid.RowSpan="3" RenderTransformOrigin="0.732,0.663" Margin="16,24.5,0,53.5" Grid.Column="1" HorizontalAlignment="Left" Width="63"  >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="78.941"/>
                    <TranslateTransform X="-12.112" Y="5.45"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        
        <TextBlock Text="Выберите категорию музыки и ее стоимость" FontSize="25" Grid.ColumnSpan="4" Grid.RowSpan="2" VerticalAlignment="Center" Grid.Column="2" Grid.Row="0" Foreground="Yellow"/>
        <Button Content="Справка" Height="35" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="18" Margin="5" Click="Spravka_Click" Background="#FFD10058" Foreground="#FFF8F3A2"/>
        <Button Content="Правила игры" Height="35" Width="140" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontSize="18" Margin="5 -10 0 0" Click="Pravila_Click" Background="#FFD10058" Foreground="#FFF8F3A2" />
        <Button Content="На главную" Height="35" Width="140" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="6" Margin="5" HorizontalAlignment="Right" FontSize="18" Click="Home_Click" Background="#FFD10058" Foreground="#FFF8F3A2" />

        <Label Content="90-е русские" Grid.Column="2" Grid.Row="2" />
        <Label Content="Из мультфильмов" Grid.Column="2" Grid.Row="3" />
        <Label Content="Зарубежные" Grid.Column="2" Grid.Row="4" />
        <Label Content="Молодежные" Grid.Column="2" Grid.Row="5" />
        <!--Для первой категории-->
        <Button x:Name="Rus100" BorderBrush="White" Content="100" Grid.Row="2" Grid.Column="3" Click="Rus100_Click"/>
        <Button x:Name="Rus200" BorderBrush="White" Content="200" Grid.Row="2" Grid.Column="4" Click="Rus200_Click"/>
        <Button x:Name="Rus300" BorderBrush="White" Content="300" Grid.Row="2" Grid.Column="5" Click="Rus300_Click"/>
        <!--Для второй категории-->
        <Button x:Name="Cartoon100" BorderBrush="White" Content="100" Grid.Row="3" Grid.Column="3" Click="Cartoon100_Click"/>
        <Button x:Name="Cartoon200" BorderBrush="White" Content="200" Grid.Row="3" Grid.Column="4" Click="Cartoon200_Click"/>
        <Button x:Name="Cartoon300" BorderBrush="White" Content="300" Grid.Row="3" Grid.Column="5" Click="Cartoon300_Click"/>
        <!--Для третьей категории-->
        <Button x:Name="Foreign100" BorderBrush="White" Content="100" Grid.Row="4" Grid.Column="3" Click="Foreign100_Click"/>
        <Button x:Name="Foreign200" BorderBrush="White" Content="200" Grid.Row="4" Grid.Column="4" Click="Foreign200_Click"/>
        <Button x:Name="Foreign300" BorderBrush="White" Content="300" Grid.Row="4" Grid.Column="5" Click="Foreign300_Click" />
        <!--Для четвертой категории-->
        <Button x:Name="Young100" BorderBrush="White" Content="100" Grid.Row="5" Grid.Column="3" Click="Young100_Click"/>
        <Button x:Name="Young200" BorderBrush="White" Content="200" Grid.Row="5" Grid.Column="4" Click="Young200_Click"/>
        <Button x:Name="Young300" BorderBrush="White" Content="300" Grid.Row="5" Grid.Column="5" Click="Young300_Click"/>

        <Button x:Name="Final" Content="Финальный раунд" Grid.Row="11" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="4" Width="300" Height="70" Background="White" FontSize="30" Click="Final_Click">
            <Button.BitmapEffect>
                <DropShadowBitmapEffect Color="#FF4C4545 " Direction="320" Softness="1" ShadowDepth="5" Opacity="0.3" />
            </Button.BitmapEffect>
        </Button>

        <TextBlock x:Name="Podskazka" FontSize="25" VerticalAlignment="Center" Grid.ColumnSpan="4" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="6" Foreground="White"/>
        <StackPanel Grid.Row="7"  Grid.Column="2" Grid.ColumnSpan="4" Grid.RowSpan="4" >
            <StackPanel.Background>
                <ImageBrush ImageSource="/Фото/фон2.png"/>
            </StackPanel.Background>
            <StackPanel Grid.Row="7"  Grid.Column="2" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,20,0,30" >
                <Button x:Name="variant1" BorderBrush="#FFF8F3A2" Foreground="#FFF8F3A2" BorderThickness="2" Content="" FontSize="20" Width="250" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2" Background="#FFD10058" Click="variant1_Click"/>
                <Button x:Name="variant2" BorderBrush="#FFF8F3A2" Foreground="#FFF8F3A2" BorderThickness="2" Content="" FontSize="20" Width="250" Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="2" Background="#FFD10058" Click="variant2_Click"/>
            </StackPanel>
            <StackPanel Grid.Row="8"  Grid.Column="2" Grid.ColumnSpan="4" Grid.RowSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,30" >
                <Button x:Name="variant3" BorderBrush="#FFF8F3A2" Foreground="#FFF8F3A2" BorderThickness="2" Content="" FontSize="20" Width="250" Grid.Row="7" Grid.Column="4" Grid.ColumnSpan="2" Background="#FFD10058" Click="variant3_Click"/>
                <Button x:Name="variant4" BorderBrush="#FFF8F3A2" Foreground="#FFF8F3A2" BorderThickness="2" Content="" FontSize="20" Width="250" Grid.Row="8" Grid.Column="4" Grid.ColumnSpan="2" Background="#FFD10058" Click="variant4_Click"/>
            </StackPanel>
            <StackPanel Grid.Row="10"  Grid.Column="2" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Счет:" FontSize="25" VerticalAlignment="Center" Grid.RowSpan="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="9" Margin="0,0,50,0"/>
                <Label x:Name="lbSchet" Grid.Row="9" Grid.Column="3" Grid.ColumnSpan="3" Grid.RowSpan="2" Width="230" Height="40" Background="{x:Null}" FontSize="20" FontWeight="Bold" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
