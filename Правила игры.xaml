<Window x:Class="Угадай_мелодию.Правила_игры"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Угадай_мелодию"
        mc:Ignorable="d"
        Icon="/Фото/иконка.ico"
        Title="Правила игры" Height="300" Width="700" Background="#FF8E0038" FontFamily="Gilroy" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <Grid>
        <ScrollViewer Padding="10" VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="Правила игры" TextAlignment="Center"  Foreground="Yellow" FontSize="18" FontWeight="Bold"/>
                </StackPanel>
                <TextBlock Text="Количество игроков – 1;
                           &#10;Количество раундов - 2;
                           &#10;Основная задача игры – угадать проигрывающуюся мелодию. У вас есть возможность выбрать понравившуюся вам категорию песен, также ее стоимость. Чем сложнее мелодия, тем больше ее стоимость. По окончании каждой песни вы можете посмотреть верный ответ и указать получилось ли у вас отгадать мелодию. После того как вы прослушаете все мелодии вы переходите в финал, где необходимо угадать одну сложную мелодию. По завершении игры вам будут видны, заработанные баллы и статистика других игроков." 
                           Margin="0 20 0 20" TextWrapping="Wrap" TextAlignment="Justify"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>


